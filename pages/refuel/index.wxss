.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 20rpx;
}

.record-list {
  padding-bottom: 30rpx;
}

.record-item {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.station-name {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.time {
  font-size: 24rpx;
  color: #999999;
}

.record-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.oil-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.oil-name {
  font-size: 28rpx;
  color: #333333;
}

.volume {
  font-size: 28rpx;
  color: #666666;
}

.amount-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.total-amount,
.voucher-amount,
.actual-amount {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #666666;
}

.value {
  font-size: 28rpx;
  color: #333333;
}

.actual-amount .value {
  color: #e74c3c;
  font-weight: bold;
}

.empty {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

.loading {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  border: 4rpx solid #eeeeee;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: loading 0.8s linear infinite;
}

.loading-text {
  font-size: 24rpx;
  color: #999999;
}

.no-more {
  padding: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}

@keyframes loading {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
} 
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
}

.tabs {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  height: 88rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #eeeeee;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.tab-item.active {
  color: #1890ff;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

.voucher-list {
  padding: 108rpx 30rpx 30rpx;
}

.voucher-item {
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.voucher-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.amount {
  margin-right: 30rpx;
}

.amount .unit {
  font-size: 32rpx;
  color: #1890ff;
}

.amount .value {
  font-size: 60rpx;
  font-weight: bold;
  color: #1890ff;
}

.detail .name {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.detail .date {
  font-size: 24rpx;
  color: #999999;
}

.voucher-status {
  width: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
}

.empty {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

.loading {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  border: 4rpx solid #eeeeee;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: loading 0.8s linear infinite;
}

.loading-text {
  font-size: 24rpx;
  color: #999999;
}

.no-more {
  padding: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}

@keyframes loading {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
} 